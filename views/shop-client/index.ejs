</head>
</head>

<body>
  <%- include('../includes/navigation-client.ejs') %>
  <main>
    <h1>My Products</h1>
    <p>List of all the products...</p>
    <% if(prods.length > 0) { %>
    <% let lastProducts = [prods[prods.length-1], prods[prods.length-2], prods[prods.length-3]]; %>
    <div class="grid-container">
      <% for(let product of lastProducts) { %>
      <div class="div-item">
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= product.title %></h1>
          </header>
          <div class="card__image">
            <img src="<%= product.imageURL %>" alt="<%= product.title %>">
          </div>
          <div class="card__content">
            <h3 class="product__price">Price: <%= product.price %> $</h3>
            <p class="product__description" ><% if (product.description.length < 35){ %>
              <%= product.description  %>
              <% } else {  %>
                <%= product.description.substring(0, 35) + "..."  %>
                <% } %>
              </p>
          </div>
          <div class="card__actions">
            <button onclick="document.location='/products/<%= product._id %>'" class="btn">Details</button>
            <form action="/cart" method="POST">
              <button class="btn">Add to Cart</button>
              <input type="hidden" name="productId" value="<%= product._id %>">
            </form>
      

          </div>
        </article>
      </div>
      <%} %>
    </div>
    <% } else {%>
    <h2>No Products</h2>
    <% } %>
  </main>
</body>

</html>